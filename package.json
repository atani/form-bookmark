{
  "name": "form-bookmark",
  "version": "1.1.1",
  "description": "Chrome extension to save and restore form inputs for testing",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:e2e": "jest tests/e2e --runInBand",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "puppeteer": "^24.37.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "utils.js"
    ]
  }
}
